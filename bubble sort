using namespace std ;
// code for bubble sort
int a[] = {2,4,7,8,3,1,32};
int n = 7;

int main()
{
    cout<<"before sorting the array :"<<endl ;
    for(int i =0 ;i<n ; i++){
        cout<<a[i]<<endl;
    }
    for(int j=0; j<= n-2 ; j++){
        for(int i = 0 ;i <= n-2 ; i++)
        if(a[i] > a[i+1]){
            swap(a[i] , a[i+1]);
        }
    }
     cout<<"after sorting the array :"<< endl;
    for(int i =0 ;i<n ; i++){
        cout<<a[i]<<endl;
    }
   
    return 0;
}
