} ;

int main() {
    union employee ross ;
        ross.eid = 1 ;
        // ross. salary = 100000000 ;
        // ross.favchar = 'r';
        cout<<"ross eid is "<<ross.eid<<endl ;
       // cout<<"ross salary is "<<ross.salary<<endl ;
        // cout<<"ross favchar is "<<ross.favchar<<endl ;
        enum meal { breakfast , lunch , dinner};
        cout<<breakfast<<endl;
        cout<<lunch<<endl;
        cout<<dinner<<endl;
