// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
// factorial using recurssion 
int factorial(int a){
    if(a <0){
        return 1;
    }
    else if ( a == 0){
        return 1;
    }

int f = a * factorial(a-1);
return f ;
}
int main() {
    int j ;
    cout<<"enter the  number :" << endl;
    cin>> j ;
    cout<<"the factorial is :"<<factorial (j) ;
    
    return 0;
}
