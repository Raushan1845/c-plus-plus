int sum(int , int); // function prototype


int main() {
    int num1 , num2 ;
    cout<<"enter the number 1"<<endl;
    cin>>num1;
    cout<<"enter the number 2"<<endl;
    cin>>num2;
    
    cout<<" the sum is : "<<sum(num1 ,num2);
    
    
    return 0;
}
int sum( int a , int b){
    int c = a+ b ;      // work only when function prototyping is done
    return c;
        
    }
