#include <iostream>
#include <climits>
using namespace std ;
// code for finding largest number
int a[] = {2,4,7,8,3,1,32};
int n = 7;
int mx = INT_MIN ;
int i;
int main()
{
    for(int i =0;i<n ; i++){
        if(a[i] > mx){
            mx =a[i];
        }
    }
   cout<<"the laegest number is : "<< mx<<endl ;
   
    return 0;
}
